@model IEnumerable<EventCategory>

@{
    ViewData["Title"] = "Quản lý danh mục sự kiện";
}

<h2>Quản lý danh mục sự kiện</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Tạo danh mục mới</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Tên danh mục</th>
            <th>Số sự kiện</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CategoryName</td>
                <td>@item.Events?.Count</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.CategoryID" class="btn btn-info btn-sm">Chi tiết</a>
                    <a asp-action="Edit" asp-route-id="@item.CategoryID" class="btn btn-warning btn-sm">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@item.CategoryID" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>